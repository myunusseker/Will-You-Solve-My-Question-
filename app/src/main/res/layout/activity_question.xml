<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:context="com.tubitak.fellas.sorumucozermisin.QuestionActivity">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:maxHeight="200dp"
                android:id="@+id/photoQuestion"
                android:background="#FFFAAA"
                android:layout_gravity="center" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ScrollView
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_above="@+id/addAnswerLayout"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/titleQuestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="#9f2222"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:text="title"
                        android:layout_gravity="left" />
                    <TextView
                        android:id="@+id/question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:layout_marginTop="5dp"
                        android:text="questionn"
                        android:layout_gravity="left"
                        />
                    <TextView
                        android:id="@+id/usernameQuestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:text="tarafindan soruldu"
                        android:layout_gravity="right"
                        />
                    <TextView
                        android:id="@+id/dateQuestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="a"
                        android:paddingRight="10dp"
                        android:layout_gravity="right"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CEVAPLAR:"
                        android:paddingLeft="10dp"
                        android:textColor="#9f2222"
                        android:textStyle="bold"
                        android:layout_gravity="left"/>
                    <include layout="@layout/content_question"/>
                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:id="@+id/addAnswerLayout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/newAnswerText"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:hint="Bir cevap yazÄ±n."
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="bottom"
                    android:text="Yolla"
                    android:id="@+id/addAnswerButton"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/expanded_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:contentDescription="Zooming"
        />
</FrameLayout>