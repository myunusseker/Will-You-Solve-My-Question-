<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F2F2F2"
    android:layout_marginTop="5dp"
    android:clickable="true">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/camera_icon"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/questionImage" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:id="@+id/relativeLayoutQuestion">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/questionTitle"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="left"
                android:textStyle="bold"
                android:textColor="#627AAD"
                android:text="SORU BASLIGI"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a5adb0" />
            <TextView
                android:id="@+id/questionText"
                android:gravity="left"
                android:textColor="#555555"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:text="Soruuuuuuudsajfasfasdklfjaslkdfhsajdhfsjadklhfjsadklhfjklasdhfjklasdhjfkl"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/questionUsername"
            android:gravity="right"
            android:textSize="11dp"
            android:textColor="#808080"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:text="sorulduuuuuuu"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</LinearLayout>